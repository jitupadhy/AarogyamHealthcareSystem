<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">

	<display-name>AarogyamHealthcareSystem</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>aarogyam.healthcare.servlet.LoginController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegistrationController</servlet-name>
		<servlet-class>aarogyam.healthcare.servlet.RegistrationController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdatePasswordController</servlet-name>
		<servlet-class>aarogyam.healthcare.servlet.UpdatePasswordController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateMobileNumberController</servlet-name>
		<servlet-class>aarogyam.healthcare.servlet.UpdateMobileNumberController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteUserController</servlet-name>
		<servlet-class>aarogyam.healthcare.servlet.DeleteUserController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ViewUserController</servlet-name>
		<servlet-class>aarogyam.healthcare.servlet.ViewUserController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/pages/Login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegistrationController</servlet-name>
		<url-pattern>/pages/Registration</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdatePasswordController</servlet-name>
		<url-pattern>/pages/UpdatePassword</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateMobileNumberController</servlet-name>
		<url-pattern>/pages/UpdateContact</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteUserController</servlet-name>
		<url-pattern>/pages/DeleteUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ViewUserController</servlet-name>
		<url-pattern>/pages/ViewUser</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.candidjava.servlet.LogoutController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>

</web-app>